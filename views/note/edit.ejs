<%- layout("layouts/boilerplate") %>

<div class="note-form-page">
  <div class="d-flex align-items-center mb-3">
    <a href="/notes/<%= note._id %>" class="btn btn-sm btn-link text-decoration-none me-2">
      <i class="bi bi-arrow-left"></i>
    </a>
    <h5 class="mb-0">Edit Note</h5>
  </div>

  <form action="/notes/<%= note._id %>?_method=PUT" method="POST" class="note-form">

    <div class="mb-3">
      <input type="text" class="form-control form-control-lg note-title-input" name="note[title]" value="<%= note.title %>"required>
    </div>
    <div class="mb-3">
      <textarea class="form-control note-content-input" name="note[content]" rows="8"><%= note.content %></textarea>
    </div>

    <div class="d-flex justify-content-between align-items-center">
      <div class="text-muted small">
        <i class="bi bi-pencil-square me-1"></i>
        Last edited: <%= note.updatedAt ? note.updatedAt.toLocaleString(): "" %>
      </div>
      <div class="d-flex gap-2">
        <a href="/notes/<%= note._id %>" class="btn btn-outline-secondary btn-sm"> Cancel </a>
        <button class="btn btn-primary btn-sm" type="submit">
          <i class="bi bi-check-lg me-1"></i> Update
        </button>
      </div>
    </div>
  </form>
</div>
