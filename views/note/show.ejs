<%- layout("layouts/boilerplate") %>

<div class="show-note-page">

  <div class="d-flex align-items-center mb-3">
    <a href="/notes" class="btn btn-sm btn-link text-decoration-none me-2">
      <i class="bi bi-arrow-left"></i>
    </a>
    <h5 class="mb-0 flex-grow-1">Note Details</h5>

    <div class="d-flex gap-2">
      <a href="/notes/<%= note._id %>/edit" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-pencil-square me-1"></i> Edit
      </a>

      <form action="/notes/<%= note._id %>?_method=DELETE"
            method="POST" onsubmit="return confirm('Delete this note?')">
        <button class="btn btn-outline-danger btn-sm" type="submit">
          <i class="bi bi-trash"></i>
        </button>
      </form>
    </div>
  </div>

  <div class="show-note-card">
    <h3 class="show-note-title">
      <%= note.title || "Untitled" %>
    </h3>

    <div class="show-note-meta text-muted small mb-3">
      <span class="me-3">
        <i class="bi bi-calendar3 me-1"></i>
        Created:
        <%= note.createdAt ? note.createdAt.toLocaleString() : "" %>
      </span>
      <% if (note.updatedAt) { %>
        <span>
          <i class="bi bi-arrow-clockwise me-1"></i>
          Updated:
          <%= note.updatedAt.toLocaleString() %>
        </span>
      <% } %>
    </div>

    <div class="show-note-body">
      <pre><%= note.content || "" %></pre>
    </div>
  </div>
</div>
