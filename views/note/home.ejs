<%- layout("layouts/boilerplate") %>

<div class="notes-page">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Your Notes</h4>
    <a href="/notes/new" class="btn btn-sm btn-primary d-inline-flex align-items-center">
      <i class="bi bi-plus-lg me-1"></i> New Note
    </a>
  </div>

  <% if (notes.length === 0) { %>
    <div class="empty-state text-center">
      <i class="bi bi-journal-x empty-icon"></i>
      <p class="mt-2 mb-1">No notes yet</p>
      <p class="text-muted small mb-3">Click the + button to create your first note.</p>
      <a href="/notes/new" class="btn btn-outline-primary btn-sm">
        <i class="bi bi-plus-lg me-1"></i> Create Note
      </a>
    </div>
  <% } else { %>
    <div class="note-grid">
      <% notes.forEach(note => { %>
        <a href="/notes/<%= note._id %>" class="note-card">
          <h6 class="note-title">
            <%= note.title || "Untitled" %>
          </h6>
          <p class="note-body">
            <% const text = note.content || ""; %>
            <%= text.length > 180 ? text.slice(0,180) + "..." : text %>
          </p>
          <div class="note-meta d-flex justify-content-between align-items-center">
            <span class="small text-muted">
              <i class="bi bi-calendar2-week me-1"></i><%= note.createdAt ? note.createdAt.toLocaleDateString() : "" %>
            </span>
            <i class="bi bi-chevron-right small text-muted"></i>
          </div>
        </a>
      <% }) %>
    </div>
  <% } %>

  <a href="/notes/new" class="btn btn-primary add-note-fab">
    <i class="bi bi-plus-lg"></i>
  </a>
</div>
