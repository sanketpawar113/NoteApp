<%- layout("layouts/boilerplate") %>

<div class="note-form-page">

  <div class="d-flex align-items-center mb-3">
    <a href="/notes" class="btn btn-sm btn-link text-decoration-none me-2">
      <i class="bi bi-arrow-left"></i>
    </a>
    <h5 class="mb-0">Create Note</h5>
  </div>

  <form action="/notes" method="POST" class="note-form">
    <div class="mb-3">
      <input type="text" class="form-control form-control-lg note-title-input" name="note[title]" placeholder="Title" required>
    </div>

    <div class="mb-3">
      <textarea class="form-control note-content-input" name="note[content]" rows="8" placeholder="Start typing your note..."></textarea>
    </div>

    <div class="d-flex justify-content-between align-items-center">
      <div class="text-muted small">
        <i class="bi bi-cloud-check me-1"></i>
        Will be saved when you submit
      </div>
      <div class="d-flex gap-2">
        <a href="/notes" class="btn btn-outline-secondary btn-sm">
          Cancel
        </a>
        <button class="btn btn-primary btn-sm" type="submit">
          <i class="bi bi-check-lg me-1"></i> Save
        </button>
      </div>
    </div>
  </form>
</div>
