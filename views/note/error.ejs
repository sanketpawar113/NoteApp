<%- layout("layouts/boilerplate") %>

<div class="error-page d-flex flex-column align-items-center justify-content-center text-center">

    <i class="bi bi-emoji-frown error-icon mb-3"></i>

    <h2 class="fw-bold mb-2">Oops! Something went wrong</h2>

    <p class="text-muted mb-4">
        <%= message || "Something went wrong! Please try again later." %>
    </p>

    <div class="d-flex gap-2">
        <a href="/notes" class="btn btn-primary">
            <i class="bi bi-journal-text me-1"></i> Back to Notes
        </a>

        <a href="/" class="btn btn-outline-secondary">
            <i class="bi bi-house me-1"></i> Home
        </a>
    </div>
</div>
